                <Setter Property="VerticalOptions"
                        Value="Center" />
                <Setter Property="Fill"
                        Value="{StaticResource Primary}" />
                <Setter Property="Opacity"
                        Value="1" />
            </Style>

            <Style x:Key="RadioButtonNormalCore"
                   TargetType="Ellipse"
                   BasedOn="{StaticResource RadioButtonSelCore}">
                <Setter Property="Opacity"
