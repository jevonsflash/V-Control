<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    x:Class="VControl.Styles.VControlTheme"
                    xmlns:converters="clr-namespace:VControl.Converters"
                    xmlns:control="clr-namespace:VControl.Controls"
                    xmlns:style="clr-namespace:VControl.Styles"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ResourceDictionary.MergedDictionaries>

        <style:VControlConsts></style:VControlConsts>
        <style:VControlColors></style:VControlColors>
        <style:VControlGlobalStyles></style:VControlGlobalStyles>

        <ResourceDictionary>

            <!--VButton-->


            <Style x:Key="Base_VButton"
                   TargetType="control:VButton">
                <Setter Property="TextColor"
                        Value="{StaticResource OnPrimary}" />
                <Setter Property="ProgressColor"
                        Value="{StaticResource Primary}" />
                <Setter Property="BorderThickness"
                        Value="0" />
                <Setter Property="FontSize"
                        Value="{StaticResource ButtonFontSize}" />
                <Setter Property="Border.Padding"
                        TargetName="MainLayout"
                        Value="14,10" />
                <Setter Property="HeightRequest"
                        Value="{StaticResource InputHeight}" />
                <Setter Property="MinimumWidthRequest"
                        Value="44" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="1" />
                                    <Setter Property="ActivityIndicator.IsRunning"
                                            TargetName="MainActivityIndicator"
                                            Value="False" />
                                    <Setter Property="ActivityIndicator.Opacity"
                                            TargetName="MainActivityIndicator"
                                            Value="0" />
                                    <Setter Property="Border.IsEnabled"
                                            TargetName="MainLayout"
                                            Value="True" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="0.6" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor"
                                            Value="{StaticResource DisabledText}" />
                                    <Setter Property="ButtonBackground"
                                            Value="{StaticResource DisabledBackground}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Busy">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="0.6" />
                                    <Setter Property="ActivityIndicator.IsRunning"
                                            TargetName="MainActivityIndicator"
                                            Value="True" />
                                    <Setter Property="ActivityIndicator.Opacity"
                                            TargetName="MainActivityIndicator"
                                            Value="1" />
                                    <Setter Property="Border.IsEnabled"
                                            TargetName="MainLayout"
                                            Value="False" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>


            <Style x:Key="PrimaryVButton"
                   TargetType="control:VButton"
                   BasedOn="{StaticResource Base_VButton}">
                <Setter Property="ButtonBackground"
                        Value="{StaticResource Primary}" />
                <Setter Property="BorderBrush"
                        Value="{StaticResource Primary}" />
                <Setter Property="ProgressColor"
                        Value="{StaticResource Surface}" />
                <Setter Property="ActivityIndicator.Color"
                        TargetName="MainActivityIndicator"
                        Value="{StaticResource OnPrimary}" />
                <Setter Property="TextColor"
                        Value="{StaticResource OnPrimary}" />

            </Style>


            <Style x:Key="OutlinedVButton"
                   TargetType="control:VButton"
                   BasedOn="{StaticResource Base_VButton}">
                <Setter Property="ButtonBackground"
                        Value="{StaticResource Surface}" />
                <Setter Property="BorderBrush"
                        Value="{StaticResource Primary}" />
                <Setter Property="BorderThickness"
                        Value="2" />
                <Setter Property="TextColor"
                        Value="{StaticResource Primary}" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="1" />
                                    <Setter Property="ActivityIndicator.IsRunning"
                                            TargetName="MainActivityIndicator"
                                            Value="False" />
                                    <Setter Property="ActivityIndicator.Opacity"
                                            TargetName="MainActivityIndicator"
                                            Value="0" />
                                    <Setter Property="Border.IsEnabled"
                                            TargetName="MainLayout"
                                            Value="True" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="0.6" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor"
                                            Value="{StaticResource DisabledText}" />
                                    <Setter Property="BorderBrush"
                                            Value="{StaticResource DisabledText}" />
                                    <Setter Property="ButtonBackground"
                                            Value="{StaticResource Surface}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Busy">
                                <VisualState.Setters>
                                    <Setter Property="ContentView.Opacity"
                                            TargetName="MainContent"
                                            Value="0.6" />
                                    <Setter Property="ActivityIndicator.IsRunning"
                                            TargetName="MainActivityIndicator"
                                            Value="True" />
                                    <Setter Property="ActivityIndicator.Opacity"
                                            TargetName="MainActivityIndicator"
                                            Value="1" />
                                    <Setter Property="Border.IsEnabled"
                                            TargetName="MainLayout"
                                            Value="False" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>

            </Style>


