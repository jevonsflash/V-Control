            </Style>
            <!--VInputControl -->

            <Style x:Key="VInputControlFrame"
                   TargetType="Border">
                <Setter Property="StrokeShape"
                        Value="{StaticResource SmallRoundRectangle}" />
                <Setter Property="Margin"
                        Value="0,0,0,5" />
                <Setter Property="Padding"
                        Value="5, 0" />
                <Setter Property="Stroke"
                        Value="{StaticResource Outline}" />
                <Setter Property="StrokeThickness"
                        Value="2" />
                <Setter Property="Background"
                        Value="White" />
            </Style>


            <ControlTemplate x:Key="VEditorTemplate">
                <Border Style="{StaticResource VInputControlFrame}">
                    <ContentPresenter></ContentPresenter>
                </Border>

            </ControlTemplate>

            <!--VEntry -->

            <Style x:Key="VEntryEntry"
                   TargetType="Entry">
                <Setter Property="TextColor"
                        Value="{StaticResource OnSurface}" />
                <Setter Property="Background"
                        Value="{StaticResource Surface}" />
                <Setter Property="FontSize"
                        Value="{StaticResource InputFontSize}" />

                <Setter Property="PlaceholderColor"
                        Value="{StaticResource PlaceHolderText}" />
                <Setter Property="HeightRequest"
                        Value="{StaticResource InputHeight}" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor"
                                            Value="{StaticResource DisabledText}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <ControlTemplate x:Key="VEntryTemplate">
                <Border Style="{StaticResource VInputControlFrame}">
                    <Grid ColumnDefinitions="1*, auto">
                        <ContentPresenter></ContentPresenter>
                        <Label Grid.Column="1"
                               IsVisible="{TemplateBinding HasIconText}"
                               FontFamily="FontAwesome-Solid"
                               Text="{TemplateBinding EntryIconText}"
                               WidthRequest="17"
                               HorizontalOptions="End"
                               VerticalOptions="Center" />
                    </Grid>

                </Border>

            </ControlTemplate>

            <!--VValidatingEntry -->


            <ControlTemplate x:Key="VValidatingEntryTemplate">

                <Grid  RowDefinitions="1*, auto">
                    <Grid.Resources>
                        <ResourceDictionary>
                            <converters:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter" />
                            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
                        </ResourceDictionary>
                    </Grid.Resources>

                    <Border Style="{StaticResource VInputControlFrame}">
                        <Grid ColumnDefinitions="1*, auto">
                            <ContentPresenter></ContentPresenter>
                            <Label Grid.Column="1"
                                   IsVisible="{TemplateBinding HasIconText}"
                                   FontFamily="FontAwesome-Solid"
                                   Text="{TemplateBinding EntryIconText}"
                                   WidthRequest="17"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center" />


                        </Grid>

                    </Border>
                    <Label Text="{TemplateBinding EntryText.Errors, Converter={StaticResource FirstValidationErrorConverter}}"
                           IsVisible="{TemplateBinding EntryText.IsValid, Converter={StaticResource InvertedBoolConverter}}"
                           VerticalOptions="End"
                           Grid.Row="1"
                           TextColor="{StaticResource Error}" />
                </Grid>
            </ControlTemplate>


            <!--VNumberEntry -->


            <ControlTemplate x:Key="VNumberEntryTemplate">
                <Border Style="{StaticResource VInputControlFrame}">
                    <ContentPresenter></ContentPresenter>


                </Border>

            </ControlTemplate>


            <!--VDatePicker -->


            <ControlTemplate x:Key="VDatePickerTemplate">
                <Border Style="{StaticResource VInputControlFrame}">

                    <Grid>
                        <ContentPresenter></ContentPresenter>
                        <Label IsVisible="{TemplateBinding IsPickerEnabled}"
                               FontFamily="FontAwesome-Solid"
                               Text="&#xf073;"
                               WidthRequest="17"
                               HorizontalOptions="End"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

            </ControlTemplate>


            <!--VPicker -->

            <Style x:Key="VPickerPicker"
                   TargetType="Picker">
                <Setter Property="TextColor"
                        Value="{StaticResource OnSurface}" />
                <Setter Property="TitleColor"
                        Value="{StaticResource OnSurface}" />
                <Setter Property="Background"
                        Value="{StaticResource Surface}" />
                <Setter Property="FontSize"
                        Value="{StaticResource InputFontSize}" />
                <Setter Property="HeightRequest"
                        Value="{StaticResource InputHeight}" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor"
                                            Value="{StaticResource DisabledText}" />
                                    <Setter Property="TitleColor"
                                            Value="{StaticResource DisabledText}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>


            <ControlTemplate x:Key="VPickerTemplate">
                <Border Style="{StaticResource VInputControlFrame}">
                    <Grid>
                        <ContentPresenter></ContentPresenter>
                        <Label IsVisible="{TemplateBinding IsPickerEnabled}"
                               FontFamily="FontAwesome-Solid"
                               Text="&#xf107;"
                               WidthRequest="17"
                               HorizontalOptions="End"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

            </ControlTemplate>


            <!--VValidatingPicker -->

            <ControlTemplate x:Key="VValidatingPickerTemplate">

                <Grid  RowDefinitions="1*, auto">
                    <Grid.Resources>
                        <ResourceDictionary>
                            <converters:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter" />
                            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
                        </ResourceDictionary>
                    </Grid.Resources>

                    <Border Style="{StaticResource VInputControlFrame}">
                        <Grid ColumnDefinitions="1*, auto">
                            <ContentPresenter></ContentPresenter>
                            <Label IsVisible="{TemplateBinding IsPickerEnabled}"
                                   FontFamily="FontAwesome-Solid"
                                   Text="&#xf107;"
                                   WidthRequest="17"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center" />

                        </Grid>

                    </Border>
                    <Label Text="{TemplateBinding SelectedItem.Errors, Converter={StaticResource FirstValidationErrorConverter}}"
                           IsVisible="{TemplateBinding SelectedItem.IsValid, Converter={StaticResource InvertedBoolConverter}}"
                           VerticalOptions="End"
                           Grid.Row="1"
                           TextColor="{StaticResource Error}" />
                </Grid>
            </ControlTemplate>


            <!--VTagPicker -->

            <Style x:Key="VTagPickerItemBorder"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="0"></Setter>
                <Setter Property="StrokeShape"
                        Value="{StaticResource SmallRoundRectangle}" />
                <Setter Property="Padding"
                        Value="10,4,10,4" />
                <Setter Property="Margin"
                        Value="1" />
                <Setter Property="Background"
                        Value="{StaticResource Gray50}" />
            </Style>

            <ControlTemplate x:Key="VTagPickerTemplate">
                <Border Style="{StaticResource VInputControlFrame}">
                    <Grid>
                        <ContentPresenter></ContentPresenter>
                        <Label IsVisible="{TemplateBinding IsPickerEnabled}"
                               FontFamily="FontAwesome-Solid"
                               Text="&#xf107;"
                               WidthRequest="17"
                               HorizontalOptions="End"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

            </ControlTemplate>


            <!--VRichTextEditor -->

            <Style TargetType="Border"
                   x:Key="SelectableLayoutStyle">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="Background"
                                            Value="{StaticResource Surface}" />
                                    <Setter Property="Stroke"
                                            Value="{StaticResource Outline}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Background"
                                            Value="{StaticResource Surface}" />
                                    <Setter Property="Stroke"
                                            Value="{StaticResource Outline}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>


            <!--Apply ControlTemplate For InputControls-->

            <Style TargetType="control:VEditor">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VEditorTemplate}" />


            </Style>


            <Style TargetType="control:VRichTextEditor">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VEditorTemplate}" />


            </Style>

            <Style TargetType="control:VEntry">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VEntryTemplate}" />


            </Style>

            <Style TargetType="control:VNumberEntry">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VNumberEntryTemplate}" />


            </Style>

            <Style TargetType="control:VValidatingEntry">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VValidatingEntryTemplate}" />


            </Style>

            <Style TargetType="control:VDateNativePicker">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VDatePickerTemplate}" />


            </Style>

            <Style TargetType="control:VPicker">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VPickerTemplate}" />


            </Style>

            <Style TargetType="control:VValidatingPicker">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VValidatingPickerTemplate}" />


            </Style>


            <Style TargetType="control:VTagPicker">
                <Setter Property="ControlTemplate"
                        Value="{StaticResource VTagPickerTemplate}" />


            </Style>



            <!--VFormItem -->


            <Style x:Key="FormItemLabel"
                   TargetType="Label">
                <Setter Property="Margin"
                        Value="0,10,0,0" />
                <Setter Property="TextColor"
                        Value="{StaticResource Gray380}" />
            </Style>


            <Style x:Key="FormItemInfoBorder"
                   TargetType="Border">
                <Setter Property="Margin"
                        Value="0,5,0,0" />
                <Setter Property="Padding"
                        Value="10" />
                <Setter Property="Background"
                        Value="{StaticResource PrimaryContainer}" />
                <Setter Property="StrokeThickness"
                        Value="0" />
            </Style>
            <Style x:Key="FormItemInfoLabel"
                   TargetType="Label">
                <Setter Property="TextColor"
                        Value="{StaticResource Primary}" />
                <Setter Property="FontSize"
                        Value="{StaticResource BodyFontSize}" />
            </Style>

        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
