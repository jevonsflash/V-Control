            <!--VRadioButtonGroup-->


            <Style x:Key="RadioButtonGroupBorder"
                   TargetType="Border">
                <Setter Property="StrokeShape"
                        Value="{StaticResource SmallCornerRadiusValue}" />
                <Setter Property="Background"
                        Value="{StaticResource Gray150}" />
                <Setter Property="StrokeThickness"
                        Value="0" />
                <Setter Property="Padding"
                        Value="5" />
                <Setter Property="HorizontalOptions"
                        Value="Start" />
                <Setter Property="Margin"
                        Value="0,10,0,0" />
            </Style>

            <Style x:Key="RadioButtonBorder"
                   TargetType="Border">
                <Setter Property="StrokeShape"
                        Value="{StaticResource SmallCornerRadiusValue}" />
                <Setter Property="Padding"
                        Value="8" />
                <Setter Property="StrokeThickness"
                        Value="0" />
                <Setter Property="WidthRequest"
                        Value="90" />
                <Setter Property="VerticalOptions"
                        Value="Start" />
                <Setter Property="HorizontalOptions"
                        Value="Start" />
            </Style>



            <ControlTemplate x:Key="RadioButtonTemplate">
                <Border Style="{StaticResource RadioButtonBorder}">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CheckedStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter Property="Background"
                                                Value="{StaticResource Surface}" />

                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter Property="Background"
                                                Value="{StaticResource Gray150}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                    <ContentPresenter />
                </Border>
            </ControlTemplate>

            <Style TargetType="RadioButton"
                   x:Key="RadioButtonStyle">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CheckedStates">
                            <VisualState x:Name="Checked">
                                <VisualState.Setters>
                                    <Setter Property="Label.TextColor"
                                            TargetName="CurrentRadioButtonIcon"
                                            Value="{StaticResource Primary}" />
                                    <Setter Property="Label.TextColor"
                                            TargetName="CurrentRadioButtonLabel"
                                            Value="{StaticResource Primary}" />
                                    
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Unchecked">
                                <VisualState.Setters>
                                    <Setter Property="Label.TextColor"
                                            TargetName="CurrentRadioButtonIcon"
                                            Value="{StaticResource DisabledText}" />
                                    <Setter Property="Label.TextColor"
                                            TargetName="CurrentRadioButtonLabel"
                                            Value="{StaticResource DisabledText}" />
                               
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>







