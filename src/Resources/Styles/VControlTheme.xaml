                <Setter Property="TextColor"
                        Value="{StaticResource OnSurface}" />
                <Setter Property="Text"
                        Value="{Binding IconText}" />
            </Style>

            <Style x:Key="CalendarItemSelLabel"
                   TargetType="Label"
                   BasedOn="{StaticResource CalendarItemNormalLabel}">
                <Setter Property="TextColor"
                        Value="{StaticResource Gray100}" />
            </Style>

            <Style x:Key="CalendarItemInvolvedLabel"
                   TargetType="Label"
                   BasedOn="{StaticResource CalendarItemNormalLabel}">
                <Setter Property="TextColor"
                        Value="{StaticResource Gray100}" />
            </Style>

            <Style x:Key="CalendarItemDisabledLabel"
                   TargetType="Label"
                   BasedOn="{StaticResource CalendarItemNormalLabel}">
                <Setter Property="TextColor"
                        Value="{StaticResource DisabledText}" />
            </Style>

            <!--VCheckBox -->

            <Style x:Key="CheckBoxSelBorder"
                   TargetType="Border">
                <Setter Property="StrokeShape"
                        Value="{StaticResource SmallCornerRadiusValue}" />
                <Setter Property="HeightRequest"
                        Value="24" />
                <Setter Property="WidthRequest"
                        Value="24" />
                <Setter Property="HorizontalOptions"
                        Value="Center" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
                <Setter Property="Stroke"
                        Value="{StaticResource Gray150}" />
                <Setter Property="StrokeThickness"
                        Value="2" />
                <Setter Property="Background"
                        Value="{StaticResource Success}" />
            </Style>
            <Style x:Key="CheckBoxNormalBorder"
                   TargetType="Border"
                   BasedOn="{StaticResource CheckBoxSelBorder}">

                <Setter Property="Background"
                        Value="{StaticResource Gray150}" />
            </Style>
            <Style x:Key="CheckBoxIndeterminateBorder"
                   TargetType="Border"
                   BasedOn="{StaticResource CheckBoxSelBorder}">

                <Setter Property="Background"
                        Value="{StaticResource Warning}" />
            </Style>

            <Style x:Key="CheckBoxSelLabel"
                   TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="Center" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
                <Setter Property="TextColor"
                        Value="{StaticResource OnPrimary}" />
                <Setter Property="Text"
                        Value="{Binding IconText}" />
                <Setter Property="Opacity"
                        Value="1" />
            </Style>

            <Style x:Key="CheckBoxNormalLabel"
                   TargetType="Label"
                   BasedOn="{StaticResource CheckBoxSelLabel}">
                <Setter Property="Opacity"
                        Value="0" />
            </Style>

            <Style x:Key="CheckBoxIndeterminateLabel"
                   TargetType="Label"
