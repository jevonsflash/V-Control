<?xml version="1.0" encoding="utf-8" ?>
<viewBase:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="VControl.Samples.Views.VRadioButtonView"
                          xmlns:vm="clr-namespace:VControl.Samples.ViewModels"
                          x:TypeArguments="vm:VRadioButtonViewModel"
                          xmlns:viewBase="clr-namespace:VControl.Samples.Views.Base"
                          xmlns:control="clr-namespace:VControl.Controls;assembly=VControl">
    <ScrollView>
        <VerticalStackLayout Margin="{StaticResource LayoutMargin}">
            <control:VRadioButton ItemsSource="{Binding InspTypeList}"
                                  SelectedItem="{Binding InspType}"></control:VRadioButton>


            <control:VRadioButton ItemsSource="{Binding InspTypeList2}"
                                  SelectedItem="{Binding InspType2}">

                
            </control:VRadioButton>

        </VerticalStackLayout>
    </ScrollView>
</viewBase:ContentPageBase>
